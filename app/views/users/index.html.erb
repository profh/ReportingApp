<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>User day since last</th>
      <th>User day since first</th>
      <th>User returning</th>
      <th>User visit count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_day_since_last %></td>
        <td><%= user.user_day_since_first %></td>
        <td><%= user.user_returning %></td>
        <td><%= user.user_visit_count %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

